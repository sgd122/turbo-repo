{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "types": ["vite/client", "vite-plugin-svgr/client"]
  },
  "include": [
    "src",
    "index.d.ts",
    "server.d.ts",
    "client.d.ts",
